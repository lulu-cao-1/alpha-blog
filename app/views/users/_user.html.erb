<div>
  <% @users.each do |user| %>
    <div>
      <h1><%= link_to user.username, user %></h1>
    </div>
    <div>
      <%= link_to gravatar_for(user), user %>
    </div>
    <div>
      <%= pluralize(user.articles.count, 'article') %>
    </div>
    Joined <%= time_ago_in_words(user.created_at) %>
    <%= link_to "View profile", user %>
    <% if logged_in? %>
      <% if user == current_user %>
        <%= link_to 'Edit profile', edit_user_path(user) %>
      <% end %>
      <% if current_user.is_admin? %>
        <%= link_to "Delete profile", user_path(user), method: :delete, data: { confirm: "Are you sure" } %>
      <% end %>
    <% end %>
  <% end %>
</div>
